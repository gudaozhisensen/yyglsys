<!DOCTYPE html>
<html>

	<head>
		<meta charset="UTF-8">
		<title>会员资料编辑-WeAdmin Frame型后台管理系统-WeAdmin 1.0</title>
		<meta name="renderer" content="webkit">
		<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
		<meta name="viewport" content="width=device-width, initial-scale=1.0, minimum-scale=1.0, maximum-scale=1.0, user-scalable=0">
		<link rel="stylesheet" href="../../static/css/font.css">
		<link rel="stylesheet" href="../../static/css/weadmin.css">
		<!-- 让IE8/9支持媒体查询，从而兼容栅格 -->
		<!--[if lt IE 9]>
	      <script src="https://cdn.staticfile.org/html5shiv/r29/html5.min.js"></script>
	      <script src="https://cdn.staticfile.org/respond.js/1.4.2/respond.min.js"></script>
	    <![endif]-->
	</head>

	<body>
		<div class="weadmin-body">
			<form class="layui-form">
				<div class="layui-form-item">
					<label for="L_username" class="layui-form-label">
		                <span class="we-red">*</span>医生姓名
		            </label>
					<div class="layui-input-inline">
						<input type="text" id="L_username" name="username" lay-verify="required|" autocomplete="off" class="layui-input" value="<%-infos.doctorname%>">
					</div>
					<div class="layui-form-mid layui-word-aux">
						
					</div>
				</div>
			
				<div class="layui-form-item">
				    <label for="L_sex" class="layui-form-label">性别</label>
				    <div class="layui-input-inline" id="L_sex">
                            <input type="radio" name="sex" value="" title="男" <%if("男" == infos.sex){%> checked="true"<%}%>>
                            <input type="radio" name="sex" value="女" title="女" <%if("女" == infos.sex){%> checked="true"<%}%>>
                      
				    </div>
				</div>
                <div class="layui-form-item">
					<label for="L_age" class="layui-form-label">
		                  年龄
		            </label>
					<div class="layui-input-inline">
						<input type="text" id="L_age" name="age" lay-verify="number" autocomplete="off" class="layui-input" value="<%-infos.age%>">
					</div>

				</div>
				<div class="layui-form-item">
					<label for="L_email" class="layui-form-label">
		                <span class="we-red">*</span>手机
		            </label>
					<div class="layui-input-inline">
						<input type="text" id="L_phone" name="phone" lay-verify="required|phone" autocomplete="off" class="layui-input" value="<%-infos.mobile%>">
					</div>
				</div>
				<div class="layui-form-item">
					<label for="L_email" class="layui-form-label">
		                邮箱
		            </label>
					<div class="layui-input-inline">
						<input type="text" id="L_email" name="email" lay-verify="email" autocomplete="off" class="layui-input" value="<%-infos.email%>">
					</div>

				</div>
				<div class="layui-form-item">
					<label for="L_title" class="layui-form-label">
		                <span class="we-red">*</span>职称
		            </label>
					<div class="layui-input-inline">
						<input type="text" id="L_title" name="title" lay-verify="required" autocomplete="off" class="layui-input" value="<%-infos.title%>">
					</div>
				</div>
				<div class="layui-form-item">
                    <label class="layui-form-label">头像</label>
                    <div class="layui-input-inline">
                        <input name="avatar" id="LAY_avatarSrc" placeholder="图片地址"  class="layui-input"/>
                      
                    </div>
                    <div class="layui-input-block layui-btn-container" style="width: auto;">
                        <button type="button" class="layui-btn" id="avatarSrc">
                            <i class="layui-icon">&#xe67c;</i>上传图片
                          </button>
                          <input class="layui-upload-file" type="file" accept="undefined"
                            name="file">
                        
                    </div>
                </div>
				<div class="layui-form-item">
					<label for="L_office" class="layui-form-label">
		                <span class="we-red">*</span>科室
                    </label>
                    <div class="layui-input-inline">
                    <select id="L_officeF" name="officeF" lay-filter="officeF">
                        <option value="">请选择科室</option>
                        <% for(let i=0;i<officesF.length;i++){ %>
                            <option value="<%-officesF[i].id%>"><%-officesF[i].name%></option>
                        <%} %>
                      </select>  
                    </div>
                    <div class="layui-input-inline">
                        <select id="L_officeZ" name="officeZ" lay-filter="officeZ">
                        </select>
                    </div>
				</div>
				<div class="layui-form-item">
					<label for="L_patient" class="layui-form-label">
		                <span class="we-red">*</span>可预约患者数
		            </label>
					<div class="layui-input-inline">
						<input type="text" id="L_patient" name="patient" lay-verify="required|number" autocomplete="off" class="layui-input" value="<%-infos.patientcount%>">
					</div>
				</div>
				<div class="layui-form-item">
					<label for="L_state" class="layui-form-label">
		                <span class="we-red">*</span>是否值班
		            </label>
					<div class="layui-input-inline">
						<input type="text" id="L_state" name="state" lay-verify="state" autocomplete="off" class="layui-input" value="<%-infos.state%>">
					</div>
				</div>
				
				
				
			
				<div class="layui-form-item">
					<label for="L_repass" class="layui-form-label">
              </label>
					<button class="layui-btn" lay-filter="add" lay-submit="">修改</button>
				</div>
			</form>
		</div>
		<script src="../../lib/layui/layui.js" charset="utf-8"></script>
		<script type="text/javascript">
			layui.extend({
				admin: '{/}../../static/js/admin'
			});
			layui.use(['form', 'jquery', 'admin','layer'], function() {
				var form = layui.form,
					$ = layui.jquery,
					admin = layui.admin,
					layer = layui.layer;

                  //监听select
                  form.on('select(officeF)', function(data){
                    $.ajax({
                        url: '/admin/api/doctors/select',
                        method: 'post',
                        data: {value:data.value}
                    }).then(function(res){
                        //把option先都删掉
                        if($('#L_officeZ option').length == 0){
                            $.each(res, function (index, item) {
                            //往下拉菜单里添加元素
                            $('#L_officeZ').append(new Option(item.name,item.id));
                            });
                        }else{
                            $('#L_officeZ option').parent().children().remove();
                            $.each(res, function (index, item) {
                            //往下拉菜单里添加元素
                            $('#L_officeZ').append(new Option(item.name,item.id));
                            });
                        }
                        form.render();
                        })
                    });    
				
				//监听提交
				form.on('submit(add)', function(data) {
					console.log(data);
					//发异步，把数据提交
					layer.alert("修改成功", {
						icon: 6
					}, function() {
						// 获得frame索引
						var index = parent.layer.getFrameIndex(window.name);
						//关闭当前frame
						parent.layer.close(index);
					});
					return false;
				});

			});
		</script>
	</body>

</html>